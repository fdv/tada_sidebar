<% if sidebar.tada -%>
<h3><%= sidebar.tada.title %></h3>
<ul>
<% for task in sidebar.tada.tasks.to_a.slice(0,count.to_i) -%>
  <% if task.status == :completed  -%>
    <li><del><a href="<%= task.link %>" title="<%=h task.title %>"><%=h task.title %> </a></del></li>
  <% else -%>
    <li><a href="<%= task.link %>" title="<%=h task.title %>"><%=h task.title %> </a></li>
  <% end -%>
<% end -%>
</ul>
<% end -%>
